<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.booksnippets">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app_book"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app_book"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookSnippets">
        <activity
            android:name="com.project.booksnippets.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BookSnippets.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>